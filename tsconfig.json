{
  "compilerOptions": {
    "target": "es2018",        // Node.js 10.x runtime on AWS Lambda supports ES2018
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
